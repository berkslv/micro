{
  "ReverseProxy": {
    "Routes": {
      "catalog_products_routes": {
        "ClusterId": "catalog_api",
        "Match": {
          "Path": "/api/products/{**catchall}"
        }
      },
      "catalog_categories_routes": {
        "ClusterId": "catalog_api",
        "Match": {
          "Path": "/api/categories/{**catchall}"
        }
      },
      "basket_routes": {
        "ClusterId": "basket_api",
        "Match": {
          "Path": "/api/basket/{**catchall}"
        }
      },
      "identity_routes": {
        "ClusterId": "identity_api",
        "Match": {
          "Path": "/{**catchall}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      }
    },
    "Clusters": {
      "catalog_api": {
        "Destinations": {
          "destination1": { 
            "Address": "http://localhost:5051"
          }
        }
      },
      "basket_api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5052"
          }
        }
      },
      "identity_api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8080"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
